{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <canvas id="monGraph" style="width:100%;max-width:700px;position:absolute;margin-left:50%;margin-top:3%"></canvas>
    <canvas id="myChartDep" style="width:100%;max-width:700px;position:absolute;margin-left:10%;margin-top:3%"></canvas>
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script>
    var graph = document.getElementById("monGraph");
    var myCharts = new Chart('monGraph', {
    type:'pie',
    data: {
        labels: ['Tickets Termin√©s ','Ticket en Cours'],
        datasets: [{
            data:[{{ countNoActive }},{{ countActive }}],
            backgroundColor: ['magenta','blue']
        }]
                    },
    options: {}
    });

var graph = document.getElementById("myChartDep");
var myCharts = new Chart('myChartDep', {
    type:'doughnut',
    data: {
        labels: [ {{ nameDep | raw  }} ],
        datasets: [{
            data:[ {{ nbTickets | join(',')}} ],
            backgroundColor: ['blue','cyan','green','violet','brown','orange','red','grey','purple','yellow']
        }]
                    },
    options: {}
    });

</script>
{% endblock %}
