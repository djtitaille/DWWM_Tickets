{% extends 'base.html.twig' %}

{% block title %}Liste des tickets{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.0/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}
<div class="container">
<h1 class="my-3">Liste des tickets</h1>

<a href="{{ path('ticket_create') }}" class="btn btn-success">Ajouter</a>

<table class="table table-striped tabled-bordered" id="myTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Object</th>
            <th>Created At</th>
            <th>Department</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
<tbody>
    {%for ticket in tickets %}
        <tr>
            <th scope ="row">{{ ticket.id }}</th>
            <td>{{ ticket.object }}</td>
            <td>{{ ticket.createdAt | date('d/m/Y H:i')}}</td>
            <td>{{ ticket.department.name }}</td>
            <td>{{ ticket.isActive }}</td>
            <td><a href="{{ path('ticket_update', {'id' : ticket.id}) }}" class="btn btn-info">Modifier</a></td>
            <td><a href="{{ path('ticket_delete', {'id' : ticket.id}) }}" class="btn btn-danger">Supprimer</a></td>
        </tr>
    {% endfor %}
</tbody>
</table>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
    <script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
    </script>
{% endblock %}